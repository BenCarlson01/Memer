<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bemad.bcarlson.memer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Memer"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.bemad.bcarlson.memer.MainActivity"
            android:parentActivityName="com.bemad.bcarlson.memer.LoginRegistrationActivity" />
        <activity android:name="com.bemad.bcarlson.memer.LoginRegistrationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bemad.bcarlson.memer.RegistrationActivity"
            android:parentActivityName="com.bemad.bcarlson.memer.LoginRegistrationActivity" />
        <activity
            android:name="com.bemad.bcarlson.memer.LoginActivity"
            android:parentActivityName="com.bemad.bcarlson.memer.LoginRegistrationActivity" />
        <activity
            android:name="com.bemad.bcarlson.memer.SettingsActivity"
            android:parentActivityName="com.bemad.bcarlson.memer.MainActivity" />
        <activity
            android:name="com.bemad.bcarlson.memer.matches.MatchesActivity"
            android:parentActivityName="com.bemad.bcarlson.memer.MainActivity" />
        <activity android:name="com.bemad.bcarlson.memer.chat.ChatActivity"
            android:parentActivityName="com.bemad.bcarlson.memer.matches.MatchesActivity"/>
    </application>

</manifest>